@inject NavigationManager navigationManager

<div class="header header-fixed header-logo-center">
    <a href="#" class="header-title">@mainLayout.chapterName</a>
    <a href="#" @onclick="goBack" class="header-icon header-icon-1"><i class="fas fa-arrow-left"></i></a>
</div>

@code {
    [CascadingParameter]
    public LayoutRead mainLayout { get; set; }

    void goBack()
    {
        navigationManager.NavigateTo(mainLayout.linkBack);
    }
}
